<html>
<head>
</head>
<body>
	<div class='container'>
		<div class="col-md-8">
			<% if session[:user_id] == nil %>
				<%= link_to "Register", register_path %>
				<%= link_to "Login", new_login_path %>
			<% else %>
				<h4><%= "Welcome, " + User.find_by_id(session[:user_id]).name	 %></h4>
				<%= link_to "Logout", logout_path %>
			<% end %>
			</div>
			<% @posts.each do |d| %>
			<div class="col-md-8">
				<h1><%= d.title %></h1>
				<p><%= truncate(d.content, :length => 200) %></p>
				<%= link_to "Read More", post_path(d), :class => "btn btn-success"  %>
		</div>
		<% end %>
		<br>
		<div class="col-md-8">
			<%= link_to "Create New Post", '/posts/new'  %>
		</div>
		<br>
	</div>
</body>
</html>
