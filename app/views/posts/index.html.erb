<html>
<head>
</head>
<body>
	<div class='container'>
		<% @posts.each do |d| %>
		<div class="col-md-8">
		<h1><%= d.title %></h1>
		<p><%= truncate(d.content, :length => 200) %></p>
		<%= link_to "Read More", post_path(d), :class => "btn btn-success"  %>
		</div>
		<% end %>
		<br>
		<div class="col-md-8">
		<%= link_to "Create New Post", '/posts/new'  %>
		</div>
		<br>
	</div>
</body>
</html>
